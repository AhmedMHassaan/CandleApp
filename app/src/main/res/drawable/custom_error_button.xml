<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <!--clicked-->
        <shape>
            <solid android:color="@color/errorColor" />
            <stroke android:width="1dp" android:color="@color/errorColor" />
            <corners android:radius="@dimen/_20sdp" />
            <padding android:bottom="@dimen/_5sdp" android:left="@dimen/_5sdp" android:right="@dimen/_5sdp" android:top="@dimen/_5sdp" />
        </shape>
    </item>
    <item>
        <!--normal-->
        <shape>

            <gradient android:angle="270" android:endColor="@color/red_error" android:startColor="@color/red_error" />
            <!--            <stroke android:width="1dp" android:color="#4aa5d4" />-->
            <stroke android:width="1dp" android:color="@color/blue_pressed" />
            <corners android:radius="@dimen/_20sdp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
</selector>