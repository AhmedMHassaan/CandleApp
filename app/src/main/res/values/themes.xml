<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CandleApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="exception" />

    <style name="exception.title">
        <item name="fontFamily">@font/font1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/dynamicbox_internet_off_title</item>
    </style>

    <style name="exception.message">
        <item name="fontFamily">@font/font1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/dynamicbox_internet_off_message</item>
    </style>


    <style name="loadingButton">

        <item name="pb_cornerRadius">@dimen/_20sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/font1</item>
        <item name="fontFamily">@font/font1</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:background">@drawable/ripple_click</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="pb_colorComplete">@color/successColor</item>
        <item name="pb_colorError">@color/errorColor</item>
        <item name="pb_colorNormal">@color/colorPrimaryDark</item>
        <item name="pb_colorPressed">@color/blue_pressed</item>
        <item name="pb_colorProgress">@color/white</item>
    </style>

    <style name="Theme.CustomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/custom_dialog_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="cardViewStyle">
        <item name="cardCornerRadius">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>

    </style>


    <style name="ProgressStyle" parent="SpinKitView.Large">
        <item name="android:layout_gravity">center</item>
        <item name="SpinKit_Style">FadingCircle</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>